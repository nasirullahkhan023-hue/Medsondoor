  <script>
    document.getElementById("year").textContent = new Date().getFullYear();

    const form = document.getElementById("orderForm");
    form.addEventListener("submit", function (e) {
      e.preventDefault();

      const name = document.getElementById("name").value.trim();
      const phone = document.getElementById("phone").value.trim();
      const address = document.getElementById("address").value.trim();
      const items = document.getElementById("items").value.trim();
      const notes = document.getElementById("notes").value.trim();

      if (!name || !phone || !address || !items) {
        alert("Please fill Name, Mobile, Address and Items.");
        return;
      }

      const text =
        "New MedsOnDoor Order\n\n" +
        "Name: " + name + "\n" +
        "Mobile: " + phone + "\n\n" +
        "Delivery Address:\n" + address + "\n\n" +
        "Medicines / Items:\n" + items + "\n\n" +
        (notes ? "Extra Notes:\n" + notes + "\n\n" : "") +
        "I will also send my doctor prescription photo.";

      const number = "917415369601"; // your WhatsApp number (no +)
      const url = "https://wa.me/" + number + "?text=" + encodeURIComponent(text);

      window.open(url, "_blank");
    });
  </script>
